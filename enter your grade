package javaapplication15loop;

import java.util.Scanner;

/**
 *
 * @author EL-masreya
 */
public class JavaApplication15loop {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
       Scanner input =new Scanner(System.in);
       
       int grade =0 ,sum=0 ,counter=1;
    while (counter<=5 && grade!= -1)   
    {
       System.out.println("Enter your grade student no or -1 to exit"+counter);
       grade=input.nextInt();
       sum +=grade;
       counter++;
    }  
       System.out.println("Average of the 5grade is"+sum/5); 
       
    }
    
}
